SELECT * FROM DEPT2;
SELECT * FROM EMP3;

ASSIGNMENT ON CASE 2 :
-------------------------------------------

SELECT DNAME FROM DEPT2 WHERE DEPTNO IN  (SELECT DEPTNO FROM EMP3 WHERE ENAME = 'SMITH');

SELECT DNAME,LOC FROM DEPT2 WHERE DEPTNO IN  (SELECT DEPTNO FROM EMP3 WHERE ENAME = 'KING');

SELECT LOC FROM DEPT2 WHERE DEPTNO = (SELECT DEPTNO FROM EMP3 WHERE EMPNO = 7902);

SELECT DNAME,LOC FROM DEPT2 WHERE DEPTNO IN  (SELECT DEPTNO FROM EMP3 WHERE ENAME LIKE '%R');

SELECT DNAME FROM DEPT2 WHERE DEPTNO IN(SELECT DEPTNO FROM EMP3 WHERE JOB =  'PRESIDENT');

SELECT ENAME FROM EMP3 WHERE DEPTNO IN (SELECT DEPTNO FROM DEPT2 WHERE DNAME = 'ACCOUNTING');

SELECT ENAME,SAL FROM EMP3 WHERE DEPTNO = (SELECT DEPTNO FROM DEPT2 WHERE LOC = 'CHICAGO');

SELECT * FROM EMP3 WHERE DEPTNO IN (SELECT DEPTNO FROM DEPT2 WHERE DNAME = 'SALES');

SELECT EMPNO,ENAME,JOB,SAL,(SAL*12) ANNUAL_SALARY FROM EMP3 WHERE DEPTNO IN (SELECT DEPTNO FROM DEPT2 WHERE LOC = 'NEW YORK');

SELECT ENAME FROM EMP3 WHERE DEPTNO = (SELECT DEPTNO FROM DEPT2 WHERE DNAME = 'OPERATIONS');

SOLUTION OF ASSIGNMENT ON CASE 1 & 2
-------------------------------------------------
SELECT ENAME FROM EMP3 WHERE SAL > (SELECT SAL FROM EMP3 WHERE ENAME = 'SCOTT') AND DEPTNO = (SELECT DEPTNO FROM DEPT2 WHERE DNAME = 'ACCOUNTING'); 

SELECT * FROM EMP3 WHERE JOB = 'MANAGER' AND DEPTNO = (SELECT DEPTNO FROM DEPT2 WHERE LOC = 'CHICAGO');

SELECT ENAME,SAL FROM EMP3 WHERE SAL > (SELECT SAL FROM EMP3 WHERE ENAME = 'KING') AND DEPTNO = (SELECT DEPTNO FROM DEPT2 WHERE DNAME = 'ACCOUNTING');

SELECT * FROM EMP3 WHERE JOB = 'SALESMAN' AND DEPTNO = (SELECT DEPTNO FROM DEPT2 WHERE DNAME = 'SALES');
 
SELECT ENAME,SAL,JOB,HIREDATE FROM EMP3 WHERE DEPTNO = (SELECT DEPTNO FROM DEPT2 WHERE DNAME = 'OPERATIONS') AND HIREDATE < (SELECT HIREDATE FROM EMP3 WHERE ENAME = 'KING');

SELECT ENAME FROM EMP3 WHERE DEPTNO IN (SELECT DEPTNO FROM DEPT2 WHERE DNAME LIKE '%S');

SELECT  DNAME FROM DEPT2 WHERE DEPTNO IN (SELECT DEPTNO FROM EMP3 WHERE ENAME LIKE '%A%');

SELECT DNAME,LOC FROM DEPT2 WHERE DEPTNO IN (SELECT DEPTNO FROM EMP3 WHERE SAL = 800);

SELECT DNAME FROM DEPT2 WHERE DEPTNO IN (SELECT DEPTNO FROM EMP3 WHERE COMM IS NOT NULL AND COMM > 0);

SELECT LOC FROM DEPT2 WHERE DEPTNO IN (SELECT DEPTNO FROM EMP3 WHERE COMM IS NOT NULL AND COMM > 0 AND DEPTNO = 40);

ASSIGNMENT ON MAX & MIN :
-----------------------------------------------

SELECT ENAME FROM EMP3 WHERE SAL = (SELECT MAX(SAL) FROM EMP3);

SELECT ENAME FROM EMP3 WHERE SAL = (SELECT MIN(SAL) FROM EMP3);

SELECT ENAME, HIREDATE FROM EMP3 WHERE HIREDATE = (SELECT MIN(HIREDATE) FROM EMP3);

SELECT ENAME, HIREDATE FROM EMP3 WHERE HIREDATE = (SELECT MAX(HIREDATE) FROM EMP3);

SELECT ENAME, COMM FROM EMP3 WHERE COMM = (SELECT MIN(COMM) FROM EMP3);

SELECT ENAME,SAL, COMM FROM EMP3 WHERE COMM = (SELECT MAX(COMM) FROM EMP3);

SELECT *FROM EMP3 WHERE EMPNO = (SELECT MAX(EMPNO) FROM EMP3);

SELECT * FROM EMP3 WHERE HIREDATE = (SELECT MIN(HIREDATE) FROM EMP3);

SELECT * FROM EMP3 WHERE (SAL*12) = (SELECT MIN(SAL*12) FROM EMP3);

SELECT ENAME,(SAL*12) "ANNUAL SALARY" FROM EMP3 WHERE (SAL*12) > (SELECT MAX(SAL*12) FROM EMP3 WHERE JOB='SALESMAN');


ASSIGMENT ON EMPLOYEE AND MANAGER RELATIONSHIP
---------------------------------------------------------------------------------------------
SELECT * FROM EMP3;
SELECT * FROM DEPT2;

SELECT ENAME FROM EMP3 WHERE EMPNO = (SELECT MGR FROM EMP3 WHERE ENAME = 'SMITH');

SELECT ENAME FROM EMP3 WHERE EMPNO= (SELECT MGR FROM EMP3 WHERE EMPNO = (SELECT MGR FROM EMP3 WHERE ENAME='ADAMS'));

SELECT DNAME FROM DEPT2 WHERE DEPTNO IN (SELECT DEPTNO FROM EMP3 WHERE EMPNO = (SELECT MGR FROM EMP3 WHERE ENAME='JONES'));

SELECT SAL FROM EMP3 WHERE EMPNO = (SELECT MGR FROM EMP3 WHERE ENAME = 'MILLER');

SELECT LOC FROM DEPT2 WHERE DEPTNO = (SELECT DEPTNO FROM EMP3 WHERE EMPNO = (SELECT MGR FROM EMP3 WHERE EMPNO = (SELECT MGR FROM EMP3 WHERE ENAME='SMITH')));

SELECT ENAME FROM EMP3 WHERE MGR = (SELECT EMPNO FROM EMP3 WHERE ENAME='BLAKE');

SELECT COUNT(*) FROM EMP3 WHERE MGR = (SELECT EMPNO FROM EMP3 WHERE ENAME='KING');

SELECT * FROM EMP3 WHERE MGR = (SELECT EMPNO FROM EMP3 WHERE ENAME='JONES');

SELECT ENAME FROM EMP3 WHERE MGR = (SELECT MGR FROM EMP3 WHERE ENAME='BLAKE');

SELECT ENAME FROM EMP3 WHERE MGR = (SELECT MGR FROM EMP3 WHERE ENAME='FORD');
